{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Yarp.ReverseProxy.Forwarder": "Warning",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "api-docs": {
                "Order": 1,
                "ClusterId": "api",
                "Match": {
                    "Path": "/swagger/{**any}"
                }
            },
            "api": {
                "Order": 2,
                "ClusterId": "api",
                "Match": {
                    "Path": "/api/{**any}"
                }
            },
            "web": {
                "Order": 10,
                "ClusterId": "web",
                "Match": {
                    "Path": "/{**any}"
                }
            }
        },
        "Clusters": {
            "api": {
                "Destinations": {
                    "api": {
                        "Address": "http://api",
                        "Health": "http://api/health"
                    }
                }
            },
            "web": {
                "Destinations": {
                    "web": {
                        "Address": "http://web"
                    }
                }
            }
        }
    }
}
